---
const { cloudClass, speed, top, delay = '0s' } = Astro.props;
---

<div class={`cloud ${cloudClass}`} style={`top: ${top}; animation-duration: ${speed}; animation-delay: ${delay};`}></div>

<style>
  .cloud {
    position: absolute;
    width: 200px;
    height: 100px;
    background: url('/cloud_pixel_art.png') no-repeat center center;
    background-size: contain;
    left: -300px;
    z-index: 10;
    animation: moveClouds linear infinite;
  }

  @keyframes moveClouds {
    0% {
      left: -300px;
    }
    100% {
      left: 100vw;
    }
  }
</style>
