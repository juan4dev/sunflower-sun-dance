---
const { sunflowerClass } = Astro.props;
---

<div class={`sunflower ${sunflowerClass}`}></div>

<style>
  .sunflower {
    z-index: 2;
    width: 150px;
    height: 250px;
    background: url('/sunflower_pixel_art.png') no-repeat center center;
    background-size: contain;
    transform-origin: bottom center;
    animation: sunflowerMotion 5s ease-in-out infinite alternate;
  }

  @keyframes sunflowerMotion {
    0% {
      transform: translateX(0) rotate(0deg);
    }
    50% {
      transform: translateX(-20px) rotate(-15deg);
    }
    100% {
      transform: translateX(0) rotate(0deg);
    }
  }

  .sunflower2 {
    animation: sunflowerMotion2 5s ease-in-out infinite alternate;
  }

  @keyframes sunflowerMotion2 {
    0% {
      transform: translateX(0) rotate(0deg);
    }
    50% {
      transform: translateX(20px) rotate(15deg);
    }
    100% {
      transform: translateX(0) rotate(0deg);
    }
  }
</style>
